void	set_msg(char *buffer)
{
	char	*src															//rbp-0x400
	char	*dest															//rbp-0x408

	dest = buffer;
	memset(src,1024,0);
	puts(">: Msg @Unix-Dude");
	printf(">>: ");
	fgets(src, 1024,stdin)
	strncpy(buffer,src,buffer[180]);
	return ;
}

void set_username(char *buffer)
{
	int64_t			s_buffer;													//rbp-0x98
	char*			s;															//rbp-0x90
	signed int64_t	index;													//rvp-0x4

	memset(s,128,0);
	puts(">: Enter your username");
	printf('>>: ');
	fgets(s,128,stdin);
	index = 0;
	while (ret_fgets < 40 && s[index] != 0)
	{
		buffer[index + 0x8c] = s[index];
		index++;
	}
	printf(">: Welcome, %s",buffer);
	return;
}

void handle_msg()
{
	char	buffer[];												//rbp-0xc0
	int64_t	var_ch													//rbp-0xc
	
	memset(buffer + 0x8c, 0, 40);
	var_ch = 0x8c
	set_username(buffer);
	set_msg(buffer);
	puts("_Msg_sent");
	return;
}

